# Puerto del servidor
PORT=3000

# URL del frontend para CORS (en desarrollo usa http://localhost:5173, en producción usa tu URL de Render)
FRONTEND_URL=http://localhost:5173

# Clave secreta para JWT (mínimo 32 caracteres, cambiar en producción)
JWT_SECRET=your_super_secret_jwt_key_change_in_production_min_32_chars

# URI de MongoDB
# Desarrollo (local): mongodb://localhost:27017/backend_utn
# Producción (MongoDB Atlas): mongodb+srv://username:password@cluster.mongodb.net/database_name
URI_DB=mongodb://localhost:27017/backend_utn

# Credenciales de email para nodemailer (opcional)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here